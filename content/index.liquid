---js
const eleventyNavigation = {
	key: "Home",
	order: 1
};

const numberOfLatestPostsToShow = 3;
---
{% assign postsCount = collections.posts | size %}
{% assign latestPostsCount = postsCount | min: numberOfLatestPostsToShow %}
<h1>Latest {{ latestPostsCount }} Post{% if latestPostsCount != 1 %}s{% endif %}</h1>

{% assign postslistHead = numberOfLatestPostsToShow | times: -1 %}
{% assign postslist = collections.posts | head: postslistHead %}
{% assign postslistCounter = postsCount %}
{% include "postslist.liquid" %}

{% assign morePosts = postsCount - numberOfLatestPostsToShow %}
{% if morePosts > 0 %}
<p>{{ morePosts }} more post{% if morePosts != 1 %}s{% endif %} can be found in <a href="blog.liquid">the archive</a>.</p>
{% endif %}

